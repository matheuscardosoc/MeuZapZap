{
  "name": "meuzapzap",
  "version": "1.0.0",
  "description": "WhatsApp Linux notification app with system tray integration",
  "main": "src/main.js",
  "scripts": {
    "start": "electron . 2>&1 | grep -v 'platform_shared_memory_region_posix'",
    "dev": "NODE_ENV=development electron . --dev 2>&1 | grep -v 'platform_shared_memory_region_posix'",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "postinstall": "electron-builder install-app-deps",
    "convert-icons": "./convert-icons.sh",
    "watch-icons": "nodemon --watch assets/*.svg --exec \"./convert-icons.sh\""
  },
  "keywords": [
    "whatsapp",
    "electron",
    "linux",
    "notifications",
    "system-tray"
  ],
  "author": "Matheus",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "node-notifier": "^10.0.1"
  },
  "build": {
    "appId": "com.meuzapzap.app",
    "productName": "MeuZapZap",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Network",
      "desktop": {
        "Name": "MeuZapZap",
        "Comment": "WhatsApp com notificações Linux",
        "Categories": "Network;InstantMessaging;",
        "StartupWMClass": "MeuZapZap"
      }
    }
  }
}